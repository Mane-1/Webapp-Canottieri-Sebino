# Environment variables for Webapp-Canottieri-Sebino
# Copy this file to .env and set the appropriate values

# Database Configuration
DATABASE_URL=sqlite:///./canottierisebino.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# Security Configuration (REQUIRED)
SECRET_KEY=your-secret-key-here-should-be-long-and-random

# Admin User Configuration (REQUIRED for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
ADMIN_EMAIL=admin@example.com

# Logging Configuration
LOG_LEVEL=INFO

# Git Commit (for version endpoint)
GIT_COMMIT=unknown
